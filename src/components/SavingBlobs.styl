.saving-blob
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  margin auto

  width 60px
  height 60px
  border-radius 100%

  opacity 0
  transition opacity 0.6s ease 0.5s, transform 0s ease 1.1s

.saving-blob-visible
  transition opacity 0.6s ease 0.1s, transform 0s ease
  opacity 1

.saving-blob-visible:nth-child(1)
  transform translate(-100px, -120px)

.saving-blob-visible:nth-child(2)
  transform translate(-60px, 145px)

.saving-blob-visible:nth-child(3)
  transform translate(110px, 115px)

.saving-blob-inner
  width 100%
  height 100%

  background #F6F1FF
  border-radius 100%

  display flex
  justify-content center
  align-items center
  color #5B05B1
  transition transform 0.4s ease

.saving-blob-hover .saving-blob-inner
  transform scale(1.3, 1.3)
